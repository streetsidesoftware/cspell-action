root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 140

[*.{yaml,yml}]
indent_size = 2

[package*.json]
indent_size = 2

[webpack.*.js]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.har]
indent_size = 2
