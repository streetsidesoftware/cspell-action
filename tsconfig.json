{
    "compilerOptions": {
        "target": "es2019",
        "lib": [
            "es2019",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./action",
        "rootDir": "src",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
