{
  "name": "action-src",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn compile",
    "compile": "tsc -p .",
    "clean-build": "yarn clean && yarn build",
    "clean": "rimraf ../action/lib",
    "eslint": "eslint 'action-source/**/*.ts'",
    "prettier": "prettier -w \"**/*.{md,yaml,yml,json,ts}\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn build",
    "release": "standard-version",
    "smoke-test-push": "env-cmd -f ./fixtures/push.json node ./action/lib/main_root.js",
    "smoke-test": "env-cmd -f ./fixtures/pull_request.json node ./action/lib/main_root.js",
    "watch": "tsc -p . --watch",
    "test": "jest"
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^6.0.4",
    "@pollyjs/core": "^6.0.4",
    "@pollyjs/persister-fs": "^6.0.4",
    "@types/jest": "^27.4.1",
    "@types/minimatch": "^3.0.5",
    "env-cmd": "^10.1.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/core": "^3.5.1",
    "@octokit/plugin-rest-endpoint-methods": "^5.13.0",
    "@octokit/rest": "^18.12.0",
    "cspell": "^5.19.2",
    "cspell-glob": "^5.19.1",
    "vscode-uri": "^3.0.3"
  }
}
