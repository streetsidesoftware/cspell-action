{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "outDir": "../action/lib",
        "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
