{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceFolder}/action-source/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}/action-source",
            "args": ["--runInBand", "${file}"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "program": "${workspaceFolder}/action-source/node_modules/jest/bin/jest",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Test All",
            "program": "${workspaceFolder}/action-source/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}/action-source",
            "args": ["--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "windows": {
                "program": "${workspaceFolder}/action-source/node_modules/jest/bin/jest",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/action/main.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/action/**/*.js"
            ]
        }
    ]
}
