{
  "name": "cspell-action",
  "version": "1.0.0",
  "description": "GitHub Action: Check Spelling",
  "main": "action/main.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm run installAction && npm run compile",
    "installAction": "rimraf action && ./installAction.js . package.json tsconfig.json package-lock.json",
    "compile": "tsc -p .",
    "watch": "npm run compile -- --watch",
    "eslint": "eslint 'src/**/*.ts'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell-action.git"
  },
  "keywords": [
    "GitHub",
    "Action",
    "cspell",
    "spelling",
    "checker"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-action/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell-action#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/graphql": "^4.5.8",
    "@octokit/rest": "^18.0.12",
    "cspell": "^5.0.3"
  },
  "files": [
    "index.js",
    "dist/**",
    "!**/*.test.*",
    "!**/*.map"
  ]
}
