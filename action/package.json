{
  "name": "cspell-action",
  "version": "1.0.0",
  "description": "GitHub Action: Check Spelling",
  "main": "action/main.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run installAction && npm run compile",
    "installAction": "rimraf action && ./installAction.js . package.json tsconfig.json package-lock.json",
    "compile": "tsc -p .",
    "watch": "npm run compile -- --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell-action.git"
  },
  "keywords": [
    "GitHub",
    "Action",
    "cspell",
    "spelling",
    "checker"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-action/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell-action#readme",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^12.12.28",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@actions/core": "^1.2.2",
    "@actions/github": "^2.1.1",
    "cspell": "^4.0.55"
  },
  "files": [
    "index.js",
    "dist/**",
    "!**/*.test.*",
    "!**/*.map"
  ]
}
