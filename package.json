{
  "name": "cspell-action",
  "version": "1.0.4",
  "description": "GitHub Action: Check Spelling",
  "main": "action/main.js",
  "private": true,
  "workspaces": [
    "action-source"
  ],
  "scripts": {
    "build": "yarn installAction && yarn buildSource",
    "buildSource": "yarn workspaces run build",
    "clean-build": "yarn clean && yarn build",
    "clean": "rimraf action",
    "eslint": "eslint 'action-source/**/*.ts'",
    "installAction": "node ./installAction.js ./action action-source/package.json",
    "prettier": "prettier -w \"**/*.{md,yaml,yml,json,ts}\"",
    "prepare": "yarn build",
    "release": "standard-version",
    "smoke-test-push": "env-cmd -f ./fixtures/push.json node ./action/main.js",
    "smoke-test": "env-cmd -f ./fixtures/pull_request.json node ./action/main.js",
    "test": "yarn workspaces run test"
  },
  "repository": "git+https://github.com/streetsidesoftware/cspell-action.git",
  "keywords": [
    "GitHub",
    "cspell",
    "Action",
    "cspell",
    "spell",
    "spelling",
    "checker"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-action/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell-action#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.10.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
