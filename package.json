{
  "name": "cspell-action",
  "version": "0.2.4",
  "description": "GitHub Action: Check Spelling",
  "main": "action/main.js",
  "private": true,
  "scripts": {
    "prepare": "npm run installSource && npm run build",
    "build": "npm run installAction && npm run buildSource",
    "installAction": "node ./installAction.js . action-source/package.json action-source/tsconfig.json",
    "installSource": "cd action-source && npm i",
    "buildSource": "cd action-source && npm run build",
    "clean": "rimraf action",
    "clean-build": "npm run clean && npm run build",
    "eslint": "eslint 'action-source/**/*.ts'",
    "smoke-test": "env-cmd -f ./fixtures/pull_request.json node ./action/main.js",
    "smoke-test-push": "env-cmd -f ./fixtures/push.json node ./action/main.js",
    "test": "cd action-source && npm t"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell-action.git"
  },
  "keywords": [
    "GitHub",
    "cspell",
    "Action",
    "cspell",
    "spell",
    "spelling",
    "checker"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-action/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell-action#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
