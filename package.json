{
  "name": "cspell-action",
  "version": "0.2.2",
  "description": "GitHub Action: Check Spelling",
  "main": "action/main.js",
  "private": true,
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf action",
    "clean-build": "npm run clean && npm run build",
    "eslint": "eslint 'src/**/*.ts'",
    "smoke-test": "env-cmd -f ./fixtures/pull_request.json node ./action/main.js",
    "smoke-test-push": "env-cmd -f ./fixtures/push.json node ./action/main.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell-action.git"
  },
  "keywords": [
    "GitHub",
    "cspell",
    "Action",
    "cspell",
    "spell",
    "spelling",
    "checker"
  ],
  "author": "Jason Dent <jason@streetsidesoftware.nl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell-action/issues"
  },
  "files": [
    "action/**/*.js",
    "!**/*.test.*",
    "!**/*.map"
  ],
  "homepage": "https://github.com/streetsidesoftware/cspell-action#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/minimatch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.15.0",
    "jest-circus": "^26.6.3",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.0.12",
    "cspell": "^5.0.8"
  }
}
